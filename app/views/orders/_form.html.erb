<%=form_with(model: order) do |form| %>
    <div class="field">
        <%= form.label :customer%>
        <%= form.collection_select :customer_id, Customer.all, :id, :full_name, include_blank: true %>
    </div>
    <div class = "field">
        <%= form.label :product_name%>
        <%= form.text_field :product_name%>
    </div>
    <div class = "field">
        <%= form.label :product_count%>
        <%= form.text_field :product_count%>
    </div>
    <div class = "btn btn-primary field">
        <%= form.submit%>%
    </div>
<%end%>